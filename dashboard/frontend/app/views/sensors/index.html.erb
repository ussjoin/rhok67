<h1>Listing sensors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Controller</th>
    <th>Hardware type</th>
    <th>Unit type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sensors.each do |sensor| %>
  <tr>
    <td><%= sensor.name %></td>
    <td><%= sensor.controller %></td>
    <td><%= sensor.hardware_type %></td>
    <td><%= sensor.unit_type %></td>
    <td><%= link_to 'Show', sensor %></td>
    <td><%= link_to 'Edit', edit_sensor_path(sensor) %></td>
    <td><%= link_to 'Destroy', sensor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

